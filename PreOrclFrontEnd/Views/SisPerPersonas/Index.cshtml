@model IEnumerable<Common.Entity.Models.SisPerPersona>

@{
    ViewData["Title"] = "Index";
}

@section Styles{
    <link rel="stylesheet" href="~/templateAdmin/assets/css/cs-skin-elastic.css">
    <link rel="stylesheet" href="~/templateAdmin/assets/css/lib/datatable/dataTables.bootstrap.min.css">
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800' rel='stylesheet' type='text/css'>
}

    <div class="breadcrumbs">
        <div class="breadcrumbs-inner">
            <div class="row m-0">
                <div class="col-sm-4">
                    <div class="page-header float-left">
                        <div class="page-title">
                            <h1>Inicio</h1>
                        </div>
                    </div>
                </div>
                <div class="col-sm-8">
                    <div class="page-header float-right">
                        <div class="page-title">
                            <ol class="breadcrumb text-right">
                                <li><a href="#">Archivo</a></li>
                                <li><a href="#">Personas</a></li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

<div class="content">
    <!-- Animated -->
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Personas</strong>
                    </div>
                    <div class="card-body">
                        <div id="bootstrap-data-table_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4 no-footer">
                            <div class="row">
                                <div class="col-sm-12">
                                    <table id="bootstrap-data-table2" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="bootstrap-data-table2_info">
                                        <thead>
                                            <tr role="row">
                                                <th class="sorting_asc" tabindex="0" aria-controls="bootstrap-data-table2" rowspan="1" colspan="1" aria-sort="ascending">
                                                    @Html.DisplayNameFor(model => model.per_nombre_razon)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.per_apellido_comercial)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.per_nit)
                                                </th>
                                                <th style="display:none">
                                                    @Html.DisplayNameFor(model => model.per_dui_nrc)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.per_direccion_departamento)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.per_direccion_municipio)
                                                </th>
                                                <th style="display:none">
                                                    @Html.DisplayNameFor(model => model.per_direccion)
                                                </th>
                                                <th style="display:none">
                                                    @Html.DisplayNameFor(model => model.per_telefono)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.per_movil)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.per_email)
                                                </th>
                                                <th style="display:none">
                                                    @Html.DisplayNameFor(model => model.per_codigo)
                                                </th>
                                                <th style="display:none">
                                                    @Html.DisplayNameFor(model => model.per_nacionalidad)
                                                </th>
                                                <th style="display:none">
                                                    @Html.DisplayNameFor(model => model.per_tipo_contribullente)
                                                </th>
                                                <th style="display:none">
                                                    @Html.DisplayNameFor(model => model.per_dir_cli)
                                                </th>
                                                <th style="display:none">
                                                    @Html.DisplayNameFor(model => model.per_cobros)
                                                </th>
                                                <th>Acciones</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr role="row">
                                                    <td class="sorting_1">
                                                        @Html.DisplayFor(modelItem => item.per_nombre_razon)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.per_apellido_comercial)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.per_nit)
                                                    </td>
                                                    <td style="display:none">
                                                        @Html.DisplayFor(modelItem => item.per_dui_nrc)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.per_direccion_departamento)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.per_direccion_municipio)
                                                    </td>
                                                    <td style="display:none">
                                                        @Html.DisplayFor(modelItem => item.per_direccion)
                                                    </td>
                                                    <td style="display:none">
                                                        @Html.DisplayFor(modelItem => item.per_telefono)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.per_movil)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.per_email)
                                                    </td>
                                                    <td style="display:none">
                                                        @Html.DisplayFor(modelItem => item.per_codigo)
                                                    </td>
                                                    <td style="display:none">
                                                        @Html.DisplayFor(modelItem => item.per_nacionalidad)
                                                    </td>
                                                    <td style="display:none">
                                                        @Html.DisplayFor(modelItem => item.per_tipo_contribullente)
                                                    </td>
                                                    <td style="display:none">
                                                        @Html.DisplayFor(modelItem => item.per_dir_cli)
                                                    </td>
                                                    <td style="display:none">
                                                        @Html.DisplayFor(modelItem => item.per_cobros)
                                                    </td>
                                                    <td>
                                                        <div class="row">
                                                            <div class="col-sm-3">
                                                                <a asp-action="Edit" asp-route-id="@item.per_IDPER" title="Editar"><i class="fa fa-edit" style="color:forestgreen"></i></a>
                                                            </div>
                                                            <div class="col-sm-3">
                                                                <a asp-action="Details" asp-route-id="@item.per_IDPER" title="Ver Detalle"><i class="fa fa-file-text" style="color:blue"></i></a>
                                                            </div>
                                                            <div class="col-sm-3">
                                                                <a asp-action="Delete" asp-route-id="@item.per_IDPER" title="Eliminar Registro"><i class="fa fa-eraser" style="color:red"></i></a>
                                                            </div>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
      </div>
    </div>
        @section Scripts{
            <script src="~/templateAdmin/assets/js/lib/data-table/datatables.min.js"></script>
            <script src="~/templateAdmin/assets/js/lib/data-table/dataTables.bootstrap.min.js"></script>
            <script src="~/templateAdmin/assets/js/lib/data-table/dataTables.buttons.min.js"></script>
            <script src="~/templateAdmin/assets/js/lib/data-table/buttons.bootstrap.min.js"></script>
            <script src="~/templateAdmin/assets/js/lib/data-table/jszip.min.js"></script>
            <script src="~/templateAdmin/assets/js/lib/data-table/vfs_fonts.js"></script>
            <script src="~/templateAdmin/assets/js/lib/data-table/buttons.html5.min.js"></script>
            <script src="~/templateAdmin/assets/js/lib/data-table/buttons.print.min.js"></script>
            <script src="~/templateAdmin/assets/js/lib/data-table/buttons.colVis.min.js"></script>
            <script src="~/templateAdmin/assets/js/init/datatables-init.js"></script>

            <script type="text/javascript">
                $(document).ready(function () {
                    $('#bootstrap-data-table2').DataTable({
                        "language": {
                            "lengthMenu": "Mostrando _MENU_ registros por página",
                            "zeroRecords": "Lo sentimos ningún registro encontrado",
                            "info": "Mostrando _PAGE_ de _PAGES_",
                            "infoEmpty": "No se encontraron registros",
                            "infoFiltered": "(filtrado de _MAX_ registros)",
                            "paginate": {
                                "previous": "Anterior",
                                "next":"Siguiente"
                            },
                            "search":"Buscar"
                        }
                    });
                    $('#bootstrap-data-table-export').DataTable();
                });</script>

        }
