@model Common.Entity.Models.SisPerPersona

    <div class="modal-header">
        <h5 class="modal-title" id="largeModalLabel">Detalle</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>



    <div class="modal-body">

        <div class="card-body card-block">
            <div class="row">
                <div class="col-sm-6">
                    <label asp-for="per_nombre_razon" class="form-control-label"></label>
                    <div class="input-group">
                        <div class="input-group-addon"><i class="fa fa-user"></i></div>
                        <input asp-for="per_nombre_razon" class="form-control" disabled="disabled" />
                    </div>

                </div>
                <div class="col-sm-6">
                    <label asp-for="per_apellido_comercial" class="form-control-label"></label>
                    <div class="input-group">
                        <div class="input-group-addon"><i class="fa fa-users"></i></div>
                        <input asp-for="per_apellido_comercial" class="form-control" disabled="disabled" />
                    </div>

                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <label asp-for="per_nit" class="form-control-label"></label>
                    <div class="input-group">
                        <div class="input-group-addon"><i class="fa fa-check-square-o"></i></div>
                        <input asp-for="per_nit" class="form-control" disabled="disabled" />
                    </div>

                </div>
                <div class="col-sm-6">
                    <label asp-for="per_dui_nrc" class="form-control-label"></label>
                    <div class="input-group">
                        <div class="input-group-addon"><i class="fa fa-info"></i></div>
                        <input asp-for="per_dui_nrc" class="form-control" disabled="disabled" />
                    </div>

                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <label asp-for="per_direccion_departamento" class="form-control-label"></label>
                    <div class="input-group">
                        <div class="input-group-addon"><i class="fa fa-sitemap"></i></div>
                        <input asp-for="per_direccion_departamento" class="form-control" disabled="disabled" />
                    </div>

                </div>
                <div class="col-sm-6">
                    <label asp-for="per_direccion_municipio" class="form-control-label"></label>
                    <div class="input-group">
                        <div class="input-group-addon"><i class="fa fa-puzzle-piece"></i></div>
                        <input asp-for="per_direccion_municipio" class="form-control" disabled="disabled" />
                    </div>

                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <label asp-for="per_direccion" class="form-control-label"></label>
                    <div class="input-group">
                        <div class="input-group-addon"><i class="fa fa-envelope-o"></i></div>
                        <input asp-for="per_direccion" class="form-control" disabled="disabled" />
                    </div>

                </div>
                <div class="col-sm-6">
                    <label asp-for="per_telefono" class="form-control-label"></label>
                    <div class="input-group">
                        <div class="input-group-addon"><i class="fa fa-phone-square"></i></div>
                        <input asp-for="per_telefono" class="form-control" disabled="disabled" />
                    </div>

                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <label asp-for="per_movil" class="form-control-label"></label>
                    <div class="input-group">
                        <div class="input-group-addon"><i class="fa fa-mobile"></i></div>
                        <input asp-for="per_movil" class="form-control" disabled="disabled" />
                    </div>

                </div>
                <div class="col-sm-6">
                    <label asp-for="per_email" class="form-control-label"></label>
                    <div class="input-group">
                        <div class="input-group-addon"><i class="fa fa-envelope"></i></div>
                        <input asp-for="per_email" class="form-control" disabled="disabled" />
                    </div>

                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <label asp-for="per_codigo" class="form-control-label"></label>
                    <div class="input-group">
                        <div class="input-group-addon"><i class="fa fa-tag"></i></div>
                        <input asp-for="per_codigo" class="form-control" disabled="disabled" />
                    </div>

                </div>
                <div class="col-sm-6">
                    <label asp-for="per_nacionalidad" class="form-control-label"></label>
                    <div class="input-group">
                        <div class="input-group-addon"><i class="fa fa-flag"></i></div>
                        <input asp-for="per_nacionalidad" class="form-control" disabled="disabled" />
                    </div>

                </div>
            </div>
            <div class="row">
                <div class="col-sm-4">
                    <label asp-for="per_tipo_contribullente" class="form-control-label"></label>
                    <div class="input-group">
                        <div class="input-group-addon"><i class="fa  fa-folder-o"></i></div>
                        <input asp-for="per_tipo_contribullente" class="form-control" disabled="disabled" />
                    </div>

                </div>
