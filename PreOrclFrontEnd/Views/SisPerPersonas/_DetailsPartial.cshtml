                        <input asp-for="per_dir_cli" class="form-control" disabled="disabled" />
                    </div>

                </div>
                <div class="col-sm-4">
                    <label asp-for="per_cobros" class="form-control-label"></label>
                    <div class="input-group">
                        <div class="input-group-addon"><i class="fa fa-level-up"></i></div>
                        <input asp-for="per_cobros" class="form-control" disabled="disabled" />
                    </div>

                </div>
            </div>
        </div>

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
        <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model.per_IDPER">Editar</a>
    </div>

